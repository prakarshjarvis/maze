<p style="color: green"><%= notice %></p>
<div class="post-body">
  <h1>Posts</h1>
  <div id="posts">
    <% @posts.each do |post| %>
      <div class="post-div">
        <%= render post, current_user: @user %>
        <% if post.comments.last %>
          <h5>Last comment:</h5>
          <%= render post.comments.last %>
        <% else %>
          <b>No comments yet.</b>
          </br>
        <% end %>
      </div>
      <p>
        <%= link_to "Show this post", post, class: "btn btn-secondary" %>
        &nbsp
        <%= link_to "Show Comments", comments_path(id: post.id), class: "btn btn-secondary" %>
      </p>
    <% end %>
  </div>

  <%= link_to "New post", new_post_path(id: @user.id), class: "btn btn-secondary" %>
</div>