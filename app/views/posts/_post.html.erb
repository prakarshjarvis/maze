<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>
  <% if post.image.attached? %> 
    <%= image_tag post.image, style: "length: 500px; width: 500px" %>
  <% end %>
  <%= render partial: 'likes/button', locals: {likeable: post} %>
</div>
